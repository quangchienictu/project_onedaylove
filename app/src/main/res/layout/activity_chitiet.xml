<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:background="#cc333232"
        android:id="@+id/toolbar_back"
        app:title="Thông tin"
        app:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/img_ct"
            android:src="@drawable/daylove"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:gravity="top|bottom"
            android:id="@+id/ten_ct"
            android:layout_toRightOf="@id/img_ct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Thùy Linh"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/gt_ct"
            android:layout_below="@id/ten_ct"
            android:layout_toRightOf="@id/img_ct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính : Nữ"
            android:textColor="#5c5858"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/ns_ct"
            android:layout_below="@id/gt_ct"
            android:layout_toRightOf="@id/img_ct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Năm sinh : 1997"
            android:textColor="#5c5858"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/dc_ct"
            android:layout_below="@id/ns_ct"
            android:layout_toRightOf="@id/img_ct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ : Thái Nguyên"
            android:textColor="#5c5858"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/gia_ct"
            android:textColor="#ff174d"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/img_ct"
            android:text="1000đ/1h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/button"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Đặt đơn hàng"
            android:layout_marginTop="20dp"
            android:background="#28d8ff"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/dc_ct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="63dp"
            android:layout_height="32dp"
            android:layout_below="@id/dc_ct"
            android:layout_marginRight="5dp"
            android:layout_marginTop="36dp"
            android:layout_toLeftOf="@+id/button"
            android:background="#6d736d"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:text="Nhắn tin"
            android:textColor="#fff"
            android:textSize="10dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_1"
            android:src="@drawable/ic_info"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_2"
            android:src="@drawable/ic_info"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_3"
            android:src="@drawable/ic_info"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</ScrollView>