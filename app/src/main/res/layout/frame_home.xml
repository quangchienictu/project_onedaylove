<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ViewFlipper
        android:id="@+id/viewfp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </ViewFlipper>

    <LinearLayout

        android:id="@+id/linner"
        android:orientation="vertical"
        android:layout_below="@+id/viewfp"
        android:layout_width="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_height="wrap_content">
       <LinearLayout
           android:background="#ecf5f5"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_marginLeft="5dp"
               android:id="@+id/btnnu"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <Button
                   android:id="@+id/btn0"
                   android:background="#00201f1f"
                   android:layout_width="10dp"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:layout_marginLeft="5dp"
                   android:src="@drawable/icon_nu"
                   android:layout_width="30dp"
                   android:layout_height="40dp" />
               <TextView
                   android:textColor="#000000"
                   android:gravity="center"
                   android:layout_marginLeft="6dp"
                   android:textSize="30dp"
                   android:layout_width="wrap_content"
                   android:text="Ná»¯"
                   android:layout_height="40dp" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/btnnam"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <Button
                   android:id="@+id/btn1"
                   android:background="#00000000"
                   android:layout_width="10dp"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/icon_nam"
                   android:layout_width="30dp"
                   android:layout_height="40dp" />
               <TextView
                   android:textColor="#000000"
                   android:gravity="center"
                   android:layout_marginLeft="6dp"
                   android:textSize="30dp"
                   android:layout_width="wrap_content"
                   android:text="Nam"
                   android:layout_height="40dp" />
           </LinearLayout>
       </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerview_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</RelativeLayout>